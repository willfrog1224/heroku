<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <h1 class="welcome_sign">This is a Wonderful store that sells Wonderful Things.</h1>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <div class="card__image">
                            <a href="/products/<%= product._id %>"><img src="<%= product.imageUrl %>"
                                alt="<%= product.title %>"></a>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>I am Sorry! We are out of Stock.</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>